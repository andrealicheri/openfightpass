---
const { title } = Astro.props;
import { ViewTransitions, fade } from 'astro:transitions';
---

<html lang="en" transition:animate={fade({ duration: '0.4s' })}>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} - OpenFightPass</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Lexend+Mega:wght@500&display=swap"
            rel="stylesheet"
        />
        <ViewTransitions />
    </head>
    <body>
        <slot />
    </body>

    <style>
        @font-face {
            font-family: ufc;
            src: url(/klavika-bold-italic.otf);
        }

        body,
        html {
            margin: 0;
            padding: 0;
            background-color: #0f0f0f;
            color: white;
            font-family: "Kanit", sans-serif;
        }
    </style>
</html>
