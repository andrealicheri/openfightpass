---
const { playlistId, title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} - OpenFightPass</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Lexend+Mega:wght@500&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div id="view">
            <div style="flex: 1;" id="description">
                <h1>{title}</h1>
                <p>
                    <slot />
                </p>
                
            </div>
            <div style="flex: 1;">
                <iframe src={"https://piped.video/playlist?list=" + playlistId}
                ></iframe>
            </div>
        </div>
    </body>
</html>

<style>
    body,
    html {
        margin: 0;
        padding: 0;
        background-color: #0f0f0f;
    }
    #view {
        display: flex;
        width: 99.855vw;
        height: 99.855vh;
    }

    #playlist {
        width: 100%;
        height: 100%;
    }

    #description {
        background-image: linear-gradient(to right, black, #0f0f0f);
        color: white;
        font-family: "Kanit", sans-serif;
        padding: 5%
    }

    iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    h1 {
        font-size: 3.5rem;
    }

    p {
        font-size: 1.2rem;
    }
</style>
